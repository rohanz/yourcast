# =============================================================================
# YourCast Docker Development Environment Template
# =============================================================================
# SECURITY WARNING: This is for development only!
# Copy this file to .env.docker and fill in your actual values.
# Never commit .env.docker to version control!

# Database Configuration - Use strong passwords in production
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=yourcast_db
POSTGRES_USER=yourcast_user

# Redis Configuration - Use strong password for security
REDIS_PASSWORD=your_secure_redis_password_here

# API Keys (Replace with your actual keys)
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here
DEEPINFRA_API_KEY=your_deepinfra_api_key_here
NEWS_API_KEY=your_news_api_key_here

# TTS Provider (Options: "google" or "deepinfra")
TTS_PROVIDER=deepinfra

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_project_id_here
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/app/secrets/vertex-embeddings-prod-sa.json
GOOGLE_GENAI_USE_VERTEXAI=True

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Development Settings
DEV_MODE=true
DEBUG=false  # Keep false even in dev for security

# File Storage
STORAGE_PROVIDER=local  # Options: local, s3, gcs
STORAGE_DIR=/app/storage

# Rate Limiting (requests per minute)
RATE_LIMIT_EPISODES=5
RATE_LIMIT_API=100

# Resource Limits
MAX_EPISODE_DURATION=10  # minutes
MAX_CONCURRENT_GENERATIONS=2