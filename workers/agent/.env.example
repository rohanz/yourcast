# Database - PostgreSQL with pgvector for RSS clustering
DATABASE_URL=postgresql://yourcast_user:yourcast_password@localhost:5432/yourcast_db

# Redis for task queue
REDIS_URL=redis://localhost:6379

# Storage directory (relative to project root)
STORAGE_DIR=../../shared/storage

# Google Cloud AI Configuration
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json

# Gemini API Key (alternative to service account for Gemini only)
GEMINI_API_KEY=your_gemini_api_key_here

# TTS Provider Configuration (Options: "google" or "deepinfra")
TTS_PROVIDER=deepinfra

# Google Cloud Text-to-Speech API Key
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here

# DeepInfra API Key for Kokoro TTS
DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# Legacy News API (optional - RSS feeds are primary source now)
NEWS_API_KEY=your_news_api_key_here
